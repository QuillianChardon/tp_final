<style>
    td.column,td.columns,th.column,th.columns{padding-top:16px;}
    .bg-white{background-color:#FFF;}
    .bg-light-gray{background-color:#F5F5F5;}
    .bg-blue{background-color: aquamarine;}
    .bg-dark{background-color:#222;}
    .bg-light-purple{background-color:#f4ecff;}
    .bg-purple{background-color:#6c00ff;}

    .black{color:#000;}
    .dark{color:#222;}
    .gray{color:#666;}

    .mt-10{margin-top:10px;}
    .mb-0{margin-bottom:0;}
    .mb-10{margin-bottom:10px;}
    .mb-15{margin-bottom:15px;}
    .mb-20{margin-bottom:20px;}

    .fs-10{font-size:10px;}
    .fs-11{font-size:11px;}
    .fs-12{font-size:12px;}
    .fs-14{font-size:14px;}
    .fs-16{font-size:16px;}

    a{color:#6c00ff;text-decoration:none}
    a:active,a:hover{color:#8a36fb}
    a:visited,h1 a,h1 a:visited,h2 a,h2 a:visited,h3 a,h3 a:visited,h4 a,h4 a:visited,h5 a,h5 a:visited,h6 a,h6 a:visited{color:#6c00ff}
    table.button table td{text-align:left;color:#fefefe;background:#6c00ff;border:2px solid #6c00ff}
    table.button:hover table td,table.button:visited table td{background:#8a36fb;color:#fefefe}
    table.button table td a{color:#fefefe;border:0 solid #6c00ff;border-radius:6px}
    table.button:active table a,table.button:hover table a,table.button:visited table a{border:0 solid #8a36fb}
    table.menu td.menu-item a,table.menu th.menu-item a{color:#6c00ff}
</style>

<wrapper class="bg-light-gray">
    <container>
        <row class="bg-white">
            <columns>
                <p class="fs-14 dark text-left mb-20">Hello,</p>
                <p class="fs-14 dark text-left mb-10">Une annonce a était deposé</p>
            </columns>
        </row>
        <row class="bg-light-purple">
            {% for picture in advert.pictures %}
                <columns small="6" large="3">
                    <img class="float-center" src="{{ 'https://127.0.0.1:8000' ~  asset('images/adverts/')}}{{picture.path}}">
                </columns>
            {% endfor %}
        </row>
        <row class="bg-white">
            <columns>
                <p class="fs-12 dark text-center mb-10">Voici les différentes actions possible : </p>
                <center>
                    <a href="{{'https://127.0.0.1:8000' ~ path('advert_show',{'id':advert.id })}}">Voir</a>
                </center>
                <center>
                    <a href="{{'https://127.0.0.1:8000' ~ path('advert_transition',{'id':advert.id, 'to':'publish' })}}">Approuver</a>
                </center>
                <center>
                    <a href="{{'https://127.0.0.1:8000' ~ path('advert_transition',{'id':advert.id, 'to':'reject' })}}">Refuser</a>
                </center>
            </columns>
        </row>
        <spacer class="bg-purple" size="5"></spacer>
        <row class="bg-light-gray">
            <columns>
                <p class="fs-10 gray text-center mb-10">Copyright LeBonAngle 2021-2021</p>
            </columns>
        </row>
    </container>
</wrapper>