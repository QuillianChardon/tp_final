{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}
<table class="table">
	<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Title</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		{% for category in categorys %}
			<th cope="row">{{category.id}}</th>
			<td>{{category.name}}</td>
			<td>
				<a href="{{ path("category_edit", {'id':category.id} ) }}" class="btn btn-warning">
					<i class="fas fa-pen"></i>&nbsp;Modification</a>
			</td>
		</tbody>
	</tbody>
</tr>{% endfor %}</tbody></table><a href="{{ path("category_add") }}" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Ajouter</a>{% endblock %}
