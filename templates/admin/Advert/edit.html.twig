{% extends "base.html.twig" %}

{% block body %}
	<h2>Modification d'une advert</h2>
	{{ form_start(form) }}
	{{ form_errors(form) }}
	<div class="row">
		<div class="col">
			{{ form_row(form.title)}}
			{{ form_row(form.content)}}
			{{ form_row(form.author)}}
			{{ form_row(form.email)}}
			{{ form_row(form.category)}}
		</div>
		<div class="col">
			{{ form_row(form.price)}}
			{{ form_row(form.state)}}
			{{ form_row(form.publishAt)}}
		</div>
	</div>
	<button type="submit" class="btn btn-primary mt-2">
		<i class="fas fa-save"></i>
		Modifier la categorie
	</button>

	{{ form_end(form) }}
{% endblock %}
