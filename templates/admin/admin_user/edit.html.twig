{% extends 'base.html.twig' %}

{% block title %}edition AdminUser
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="/">Index</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{path('admin_user_index')}}">Utilisateur</a>
		</li>
		<li class="breadcrumb-item active">{{admin_user.username}}</li>
	</ol>
	<h2>Modification new AdminUser</h2>
	{{ form_start(form) }}
	{{ form_errors(form) }}
	<div class="row">
		<div class="col">
			{{ form_row(form.username)}}
			{{ form_row(form.email)}}
			{{ form_row(form.plainpassword)}}

		</div>
		<div class="col">
			{{ form_row(form.roles)}}
		</div>
	</div>
	<button type="submit" class="btn btn-primary mt-2">
		<i class="fas fa-save"></i>&nbsp;
																				Modifier la l'utilisateur
	</button>

	{{ form_end(form) }}


{% endblock %}
